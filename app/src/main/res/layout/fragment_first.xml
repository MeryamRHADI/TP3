<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        tools:ignore="MissingConstraints">


        <TextView
            android:id="@+id/nomT"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Nom"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/nomE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            />
        <TextView
            android:id="@+id/prenomT"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Prenom"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/prenomE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            />
        <TextView
            android:id="@+id/emailT"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Email"
            android:textSize="20sp" />


        <EditText
            android:id="@+id/emailE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text" />
        <TextView
            android:id="@+id/telT"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Telephone"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/telE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            />

        <TextView
            android:id="@+id/dateT"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Date de naissance"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/dateE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="date" />

        <CheckBox
            android:id="@+id/checkBoxS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sport" />
        <CheckBox
            android:id="@+id/checkBoxM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Musique" />
        <CheckBox
            android:id="@+id/checkBoxL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lecture" />

        <Button
            android:id="@+id/button_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:insetLeft="100dp"
            android:insetRight="100dp"
            android:text="Soumettre"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dateE" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>